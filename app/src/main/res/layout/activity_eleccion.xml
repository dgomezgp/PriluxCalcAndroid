<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoazul"
    tools:context=".Eleccion">

    <Button
        android:id="@+id/botonUnidades"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="166dp"
        android:layout_height="103dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="botonUnidades"
        android:text="Unidades"
        android:textAlignment="center"
        android:textColor="@color/photo_crop_highlight_color"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonLuxes"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="166dp"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="botonLuxes"
        android:text="Luxes"
        android:textAlignment="center"
        android:textColor="@color/photo_crop_highlight_color"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonUnidades" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="386dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:text="Â¿Que deseas calcular?"
        android:textAlignment="center"
        android:textColor="@color/photo_crop_highlight_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botonUnidades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />
</android.support.constraint.ConstraintLayout>